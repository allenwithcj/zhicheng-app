<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/textView_padding"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_height="wrap_content">
                <include layout="@layout/activity_required_red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/grid_base_add_sex"
                    android:layout_gravity="center"
                    android:padding="@dimen/textView_padding"
                    android:id="@+id/textView9" />
            </LinearLayout>
            <TextView
                android:id="@+id/input_sex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/black"
                android:maxLines="1"
                android:textSize="@dimen/content_size"
                android:gravity="center|left"
                android:hint="@string/hint_grid_choice"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp" />
        </LinearLayout>

        <include layout="@layout/z_line" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_height="wrap_content">
                <include layout="@layout/activity_required_red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/grid_base_add_married"
                    android:layout_gravity="center"
                    android:padding="@dimen/textView_padding" />
            </LinearLayout>

            <TextView
                android:id="@+id/input_married"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:ellipsize="middle"
                android:textColor="@color/black"
                android:maxLines="5"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:hint="@string/hint_grid_choice"
                android:textSize="@dimen/content_size"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp" />
        </LinearLayout>

        <include layout="@layout/z_line" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_height="wrap_content">
                <include layout="@layout/activity_required_red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/grid_base_add_degree"
                    android:layout_gravity="center"
                    android:padding="@dimen/textView_padding"
                    android:id="@+id/textView4" />
            </LinearLayout>
            <TextView
                android:id="@+id/input_degree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:ellipsize="middle"
                android:textColor="@color/black"
                android:maxLines="1"
                android:textSize="@dimen/content_size"
                android:gravity="center|left"
                android:hint="@string/hint_grid_choice"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp" />
        </LinearLayout>

        <include layout="@layout/z_line" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_height="wrap_content">
                <include layout="@layout/activity_required_red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/grid_base_add_policatial"
                    android:layout_gravity="center"
                    android:padding="@dimen/textView_padding"
                    android:id="@+id/textView10" />
            </LinearLayout>

            <TextView
                android:id="@+id/input_political"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:ellipsize="middle"
                android:textColor="@color/black"
                android:maxLines="1"
                android:textSize="@dimen/content_size"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:hint="@string/hint_grid_choice"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp" />
        </LinearLayout>

        <include layout="@layout/z_line" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_height="wrap_content">
                <include layout="@layout/activity_required_red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/grid_base_add_rkfl"
                    android:layout_gravity="center"
                    android:padding="@dimen/textView_padding" />
            </LinearLayout>

            <TextView
                android:id="@+id/input_rkfl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/black"
                android:maxLines="1"
                android:textSize="@dimen/content_size"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:hint="@string/hint_grid_choice"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp" />
        </LinearLayout>

        <include layout="@layout/z_line" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:padding="@dimen/textView_padding"
                android:text="@string/grid_base_huzu_name"
                android:id="@+id/textView8" />

            <EditText
                android:id="@+id/grid_base_huzu_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textColor="@color/black"
                android:background="@null"
                android:textSize="@dimen/content_size"
                android:hint="@string/hint_grid_owner_name"
                android:padding="@dimen/textView_padding" />
        </LinearLayout>

        <include layout="@layout/z_line" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_height="wrap_content">
                <include layout="@layout/activity_required_red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/textView_padding"
                    android:text="@string/grid_base_add_relation"
                    android:id="@+id/textView2" />
            </LinearLayout>
            <TextView
                android:id="@+id/input_relation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/black"
                android:maxLines="1"
                android:textSize="@dimen/content_size"
                android:gravity="center|left"
                android:hint="@string/hint_grid_choice"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp" />
        </LinearLayout>

        <include layout="@layout/z_line" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_height="wrap_content">
                <include layout="@layout/activity_required_red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/textView_padding"
                    android:text="@string/grid_base_add_lessor_remark" />
            </LinearLayout>
            <TextView
                android:id="@+id/grid_base_add_lessor_remark2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/black"
                android:maxLines="1"
                android:textSize="@dimen/content_size"
                android:gravity="center|left"
                android:hint="@string/hint_grid_choice"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp" />

        </LinearLayout>

        <include layout="@layout/z_line" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_height="wrap_content">
                <include layout="@layout/activity_required_red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/grid_base_add_remark"
                    android:padding="@dimen/textView_padding" />
            </LinearLayout>
            <TextView
                android:id="@+id/grid_base_add_remark1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/black"
                android:maxLines="1"
                android:textSize="@dimen/content_size"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:hint="@string/hint_grid_choice"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>