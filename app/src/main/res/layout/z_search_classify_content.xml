<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/case_layout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@drawable/recycle_touch_bg"
android:paddingLeft="8dp"
android:paddingRight="8dp">
<TextView
    android:id="@+id/caseNo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/textView_padding"
    android:paddingLeft="@dimen/textView_padding" />

<TextView
    android:id="@+id/caseAddress"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/caseNo"
    android:ellipsize="middle"
    android:maxLines="1"
    android:paddingTop="@dimen/textView_padding"
    android:paddingLeft="@dimen/textView_padding" />

<TextView
    android:id="@+id/caseTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/caseAddress"
    android:paddingTop="@dimen/textView_padding"
    android:paddingLeft="@dimen/textView_padding"
    android:paddingBottom="@dimen/textView_padding" />

<include layout="@layout/z_line" />

</RelativeLayout>