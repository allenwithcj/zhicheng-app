<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:elevation="@dimen/photo_margin">
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/activity_padding"
        android:src="@mipmap/logoo"
        android:scaleType="fitCenter"
        android:layout_marginTop="60dp"/>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/timeLine_padding"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_padding">
            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp" />
            <EditText
                android:id="@+id/account_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_padding"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:background="@drawable/bg_edittext"
                android:padding="@dimen/textView_padding"
                android:textSize="@dimen/content_size"
                android:hint="@string/account_name"
                android:textColor="@color/black"
                android:layout_weight="2"/>
            <EditText
                android:id="@+id/account_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_padding"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:gravity="center_vertical"
                android:background="@drawable/bg_edittext"
                android:textSize="@dimen/content_size"
                android:padding="@dimen/textView_padding"
                android:inputType="textPassword"
                android:hint="@string/account_password"
                android:textColor="@color/black"
                android:layout_weight="2"/>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="@color/pridark"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_click_bg"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="@string/login"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_padding"
                android:textColor="@color/navigationColor"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="normal"
                android:textSize="@dimen/small_text_size"
                android:gravity="center"
                android:text="@string/notice"
                android:layout_weight="1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>