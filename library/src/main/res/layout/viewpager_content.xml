<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:cb="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:padding="@dimen/textView_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/welcome"/>
    <me.codeboy.android.aligntextview.CBAlignTextView
        android:id="@+id/view_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/welcome"
        cb:punctuationConvert="true"
        android:paddingTop="@dimen/textView_padding"
        android:paddingLeft="@dimen/textView_padding"
        android:layout_toRightOf="@+id/img"/>
    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/today"
        android:paddingTop="@dimen/textView_padding"
        android:paddingLeft="@dimen/textView_padding"
        android:layout_below="@+id/view_content"
        android:layout_toRightOf="@+id/img"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/textView_padding"
        android:paddingLeft="@dimen/textView_padding"
        android:layout_below="@+id/location"
        android:layout_toRightOf="@+id/img"/>
</RelativeLayout>